    <small><%=@category.created_at.strftime("%b %d %Y") %></small><br />
    <% if @posts.length > 0 %>
        <% @posts.each do |post| %>
            <div class='post'>
                <h3><%= link_to post.title, post %></h3>
                <p><%= post.body %></p>
            </div>
        <% end %>
    <% else %>
        <p style="color: white">There are no posts</p>
    <% end %>
    <%= link_to "Back to Categories", categories_path%>
