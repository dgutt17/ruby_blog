<h1><%=@category.name %></h1>
<small><%=@category.created_at.strftime("%b %d %Y") %></small><br />
<% if @posts.length > 0 %>
    <% @posts.each do |post| %>
        <h3><%= link_to post.title, post %></h3>
        <p><%= post.body %></p>
    <% end %>
<% else %>
    <p>There are no posts</p>
<% end %>
<%= link_to "Back", categories_path%>
