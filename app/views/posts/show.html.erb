<div class="post">
<h1><%=@post.title %></h1>
<small><%=@post.created_at.strftime("%b %d %Y") %></small>
<p>Created By: <%= @post.admin_user.name%></p>
<p><%=@post.body %></p>
<p>Category: <%= link_to @post.category.name, category_path(:id => @post.category.id)%></p>
<p><%= link_to "Back to Blog Post", posts_path%>
<%# <%= link_to "Edit Post", edit_post_path %> 
<%# <%= link_to "Delete Post", @post, :confirm => "are you sure you want to delete?", :method => :delete %> 
<hr>
<h3>Add Comment</h3>
<%= form_for @comment do |f| %>

    <%= f.hidden_field :post_id%>
    <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %><br />
    </p>
    <p>
        <%= f.label :email %><br />
        <%= f.text_field :email %><br />
    </p>
    <p>
        <%= f.label :body %><br />
        <%= f.text_area :body %><br />
    </p>
    <p>
        <%= f.submit "Add Comment" %>
    </p>
<% end %>

<%= render :partial => 'partials/comment', :collection => @post.comment %>
</div>